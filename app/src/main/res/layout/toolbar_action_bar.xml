<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:id="@+id/toolbar_button_bar"
    tools:showIn="@layout/toolbar">

    <TextView
        android:id="@+id/custom_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text=""
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:textSize="8pt" />

    <Button
        android:visibility="invisible"
        android:id="@+id/stopSessionButton"
        android:text="Make \na\n Brake"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="@style/Button.MakeABreak"
        android:textSize="5pt"
        android:layout_alignParentEnd="true"
        android:layout_margin="3dip" />

    <Button
        android:visibility="invisible"
        android:id="@+id/timersListButton"
        android:text="Add \nnew\n Timer"
        style="@style/Button.MakeABreak"
        android:textSize="5pt"
        android:layout_margin="3dip"
        android:layout_toLeftOf="@id/stopSessionButton" />

</RelativeLayout>