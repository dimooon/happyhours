<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/caption"
        android:text="Story 28.08.2015 - 18:02"/>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:text="Main progress"/>

    <happyhours.dimooon.com.happyhours.view.ObservableSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:id="@+id/sessionMainProgress"/>

    <include layout="@layout/session_list_item_last"
        android:id="@+id/sessionListAddNewTimerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sessionTimersList"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_margin="1dip"/>

</LinearLayout>