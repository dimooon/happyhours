<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sessions_crad_view_root_card"
    style="@style/FullScreen"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp"
    android:elevation="5dp"
    card_view:contentPadding="4dip"
    android:background="#22ffffff"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/caption"
            style="@style/Wide.Text"
            android:layout_marginTop="5dip"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            style="@style/Text.Small"
            android:text="Overall"/>

        <happyhours.dimooon.com.happyhours.view.custom.progressbar.TimeProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sessionMainProgress"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sessionTimersList"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginTop="5dip"/>

    </LinearLayout>


</LinearLayout>