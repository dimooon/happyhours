<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/FullScreen.MainAppPadding"
    android:id="@+id/container"
    android:background="@null">

    <TextView
        style="@style/Wide.Text"
        android:layout_marginTop="@dimen/standard_margin"
        android:text=" ------------ back log -"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:id="@+id/topBar"/>

    <happyhours.dimooon.com.happyhours.view.session.SessionView
        android:id="@+id/sessionView"
        style="@style/FullScreen"
        android:layout_centerInParent="true"
        android:layout_below="@+id/topBar"
        android:visibility="gone"/>

    <Button
        android:id="@+id/startSessionButton"
        style="@style/Button.StartBack"
        android:text="Start New Story"
        android:layout_centerInParent="true" />

    <Button
        android:visibility="invisible"
        android:id="@+id/stopSessionButton"
        android:text="Make \na\n Brake"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="@style/Button.MakeABreak"/>

</RelativeLayout>