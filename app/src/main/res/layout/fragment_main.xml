<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/app_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ------------ back log -"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:id="@+id/topBar"/>

    <happyhours.dimooon.com.happyhours.view.SessionView
        android:id="@+id/sessionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/topBar"
        android:visibility="gone"/>

    <Button
        android:id="@+id/startSessionButton"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:text="Start New Story"
        android:layout_centerInParent="true"/>

    <Button
        android:visibility="gone"
        android:id="@+id/stopSessionButton"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:text="Make a Brake"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>