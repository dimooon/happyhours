<?xml version="1.0" encoding="utf-8"?>
<happyhours.dimooon.com.happyhours.view.fragments.mainsession.toolbar.HappyToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:minHeight="?android:attr/actionBarSize"
    tools:showIn="@layout/activity_main"
    android:paddingRight="15dip"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:background="@drawable/toolbar_gradient_drawable"
    android:elevation="4dip"
    android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/toolbar_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_action_bar"
            android:id="@+id/toolbar_action_bar"/>

        <include layout="@layout/toolbar_add_or_create_timer"
            android:id="@+id/toolbar_add_create_timer"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:id="@+id/toolbar_action_bar_close"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</happyhours.dimooon.com.happyhours.view.fragments.mainsession.toolbar.HappyToolbar>